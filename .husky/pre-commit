#!/bin/sh


# Load terminal helpers
. "$(dirname "$0")/terminal.sh"

# Run linters
INFO "Executing linter."

if ! npx lint-staged ; then
    ERROR "Lint failed."
    exit 1
fi

# Update 'git' index

if ! git update-index --again ; then
    ERROR "Failed to update 'git' index."
    exit 1
fi

# Done

DONE "Lint Done."
